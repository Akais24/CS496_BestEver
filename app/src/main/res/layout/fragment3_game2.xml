<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    >

    <RelativeLayout
        android:id="@+id/info_bar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/border"
        android:visibility="invisible"
        android:gravity="center"
        android:padding="2dp">
        <TextView
            android:id="@+id/game2_time_out"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="00:00:00"
            android:textSize="16dp"
            android:gravity="center"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/round_count"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="16dp"
            android:gravity="center"
            android:layout_alignParentRight="true"/>
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Round"
            android:textSize="16dp"
            android:gravity="center"
            android:layout_toLeftOf="@id/round_count"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/problem_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info_bar2"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="4dp">
        <ImageView
            android:id="@+id/prob0"
            android:layout_width="@dimen/game2_prob_size"
            android:layout_height="@dimen/game2_prob_size"
            android:layout_margin="2dp" />
        <ImageView
            android:id="@+id/prob1"
            android:layout_width="@dimen/game2_prob_size"
            android:layout_height="@dimen/game2_prob_size"
            android:layout_margin="2dp" />

            <ImageView
                android:id="@+id/prob2"
                android:layout_width="@dimen/game2_prob_size"
                android:layout_height="@dimen/game2_prob_size"
                android:layout_margin="2dp" />
        <ImageView
            android:id="@+id/prob3"
            android:layout_width="@dimen/game2_prob_size"
            android:layout_height="@dimen/game2_prob_size"
            android:layout_margin="2dp" />
        <ImageView
            android:id="@+id/prob4"
            android:layout_width="@dimen/game2_prob_size"
            android:layout_height="@dimen/game2_prob_size"
            android:layout_margin="2dp" />
        <ImageView
            android:id="@+id/prob5"
            android:layout_width="@dimen/game2_prob_size"
            android:layout_height="@dimen/game2_prob_size"
            android:layout_margin="2dp" />
        <ImageView
            android:id="@+id/prob6"
            android:layout_width="@dimen/game2_prob_size"
            android:layout_height="@dimen/game2_prob_size"
            android:layout_margin="2dp" />
        <ImageView
            android:id="@+id/prob7"
            android:layout_width="@dimen/game2_prob_size"
            android:layout_height="@dimen/game2_prob_size"
            android:layout_margin="2dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/problem_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/problem_layout1"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="4dp">
        <ImageView
            android:id="@+id/prob10"
            android:layout_width="@dimen/game2_prob_size"
            android:layout_height="@dimen/game2_prob_size"
            android:layout_margin="2dp"/>
        <ImageView
            android:id="@+id/prob11"
            android:layout_width="@dimen/game2_prob_size"
            android:layout_height="@dimen/game2_prob_size"
            android:layout_margin="2dp"/>
        <ImageView
            android:id="@+id/prob12"
            android:layout_width="@dimen/game2_prob_size"
            android:layout_height="@dimen/game2_prob_size"
            android:layout_margin="2dp" />
        <ImageView
            android:id="@+id/prob13"
            android:layout_width="@dimen/game2_prob_size"
            android:layout_height="@dimen/game2_prob_size"
            android:layout_margin="2dp" />
        <ImageView
            android:id="@+id/prob14"
            android:layout_width="@dimen/game2_prob_size"
            android:layout_height="@dimen/game2_prob_size"
            android:layout_margin="2dp" />
        <ImageView
            android:id="@+id/prob15"
            android:layout_width="@dimen/game2_prob_size"
            android:layout_height="@dimen/game2_prob_size"
            android:layout_margin="2dp" />
        <ImageView
            android:id="@+id/prob16"
            android:layout_width="@dimen/game2_prob_size"
            android:layout_height="@dimen/game2_prob_size"
            android:layout_margin="2dp" />
        <ImageView
            android:id="@+id/prob17"
            android:layout_width="@dimen/game2_prob_size"
            android:layout_height="@dimen/game2_prob_size"
            android:layout_margin="2dp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/up_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/problem_layout2">
        <Button
            android:id="@+id/up_btn"
            android:layout_width="@dimen/game2_btn_size"
            android:layout_height="@dimen/game2_btn_size"
            android:layout_centerInParent="true"
            android:background="@drawable/up_circle"
            android:layout_margin="4dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/middle_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/up_layout">

        <Button
            android:id="@+id/center_btn"
            android:layout_width="@dimen/game2_btn_size"
            android:layout_height="@dimen/game2_btn_size"
            android:layout_centerInParent="true"
            android:background="@drawable/center_circle"
            android:layout_margin="4dp"/>
        <Button
            android:id="@+id/left_btn"
            android:layout_width="@dimen/game2_btn_size"
            android:layout_height="@dimen/game2_btn_size"
            android:layout_toLeftOf="@id/center_btn"
            android:background="@drawable/left_circle"
            android:layout_margin="4dp"/>
        <Button
            android:id="@+id/right_btn"
            android:layout_width="@dimen/game2_btn_size"
            android:layout_height="@dimen/game2_btn_size"
            android:layout_toRightOf="@id/center_btn"
            android:background="@drawable/right_circle"
            android:layout_margin="4dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/down_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/middle_layout">
        <Button
            android:id="@+id/down_btn"
            android:layout_width="@dimen/game2_btn_size"
            android:layout_height="@dimen/game2_btn_size"
            android:layout_centerInParent="true"
            android:background="@drawable/down_circle"
            android:layout_margin="4dp"/>
    </RelativeLayout>

</RelativeLayout>
